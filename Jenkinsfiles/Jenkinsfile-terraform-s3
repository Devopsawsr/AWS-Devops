pipeline {
  agent { label "terraform" }
  stages {
    stage ('Codechekout') {
      steps {
        checkout scm
      }
    }
    stage('Terraform Apply') {
      steps {
        dir('/var/lib/jenkins/workspace/s3/Terraform/s3-new/') {
          withEnv(["Bucket_Name=${params.Bucket_Name}"]) {
            sh 'terraform init'
            sleep 20
            sh 'terraform apply -var "Bucket_Name=${Bucket_Name}" -auto-approve'
        }
      }
    }
  }
}
