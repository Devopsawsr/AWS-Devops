pipeline {
  agent { label "terraform" }
  stages {
    stage ('Codechekout') {
      steps {
        checkout scm
      }
    }
    stage('Terraform Apply') {
      steps {
        sh 'cd /var/lib/jenkins/workspace/s3/Terraform/s3-new/'
        withEnv(["BUCKET_NAME=${params.Bucket_Name}"]) {
          sh 'terraform init'
          sleep 60
          sh 'terraform apply -var "Bucket_Name=${BUCKET_NAME}"'
        }
      }
    }
  }
}
